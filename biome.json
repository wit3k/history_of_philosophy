{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "files": {
    "includes": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
    "ignoreUnknown": true
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "all"
    },
    "globals": ["afterAll", "afterEach", "beforeAll", "beforeEach", "describe", "expect", "it", "jest", "test"]
  },
  "linter": {
    "rules": {
      "correctness": {
        "noNodejsModules": "off",
        "useImportExtensions": "off"
      },
      "style": {
        "noImplicitBoolean": "off",
        "noNamespace": "off",
        "useFilenamingConvention": "off"
      },
      "suspicious": {
        "noConsole": {
          "level": "warn",
          "options": {
            "allow": ["info", "warn", "error"]
          }
        },
        "noReactSpecificProps": "off"
      },
      "a11y": {
        "useSemanticElements": "off",
        "noStaticElementInteractions": "off"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "overrides": [
    {
      "includes": ["**/constants/**", "**/constants.ts", "**/types.ts", "**/*.types.ts", "**/typings/**/*.d.ts"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "on"
          }
        }
      }
    },
    {
      "includes": [
        "app/**/*",
        "**/config/**/*",
        "**/*.config.cjs",
        "**/*.config.js",
        "**/*.config.mjs",
        "**/*.config.ts"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          },
          "a11y": {
            "useSemanticElements": "off",
            "noStaticElementInteractions": "off"
          }
        }
      }
    },
    {
      "includes": ["biome.json", "biome.jsonc"],
      "assist": {
        "enabled": false
      }
    }
  ]
}
